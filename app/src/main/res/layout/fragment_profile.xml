<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">


    <TextView
        android:id="@+id/tvFollowingNumber"
        android:layout_width="81dp"
        android:layout_height="64dp"
        android:layout_below="@+id/tvFollowingTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-27dp"
        android:layout_marginEnd="45dp"
        android:gravity="bottom|center"
        android:textSize="16sp"
        tools:text="textview" />

    <TextView
        android:id="@+id/tvPostsNumber"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_below="@+id/tvPostsTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="-29dp"
        android:layout_marginEnd="153dp"
        android:gravity="bottom|center"
        android:textSize="16sp"
        tools:text="textview" />

    <TextView
        android:id="@+id/tvFollowersNumber"
        android:layout_width="80dp"
        android:layout_height="61dp"
        android:layout_below="@+id/tvFollowersTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="-23dp"
        android:foregroundGravity="center"
        android:gravity="bottom|center"
        android:textSize="16sp"
        tools:text="textview" />

    <TextView
        android:id="@+id/tvFollowingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="47dp"
        android:gravity="center"
        android:text="Following"
        android:textColor="#2D1F70"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPostsTitle"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="159dp"
        android:gravity="center"
        android:text="Posts"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivProfilePicProfile"
        android:layout_width="110dp"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="147dp"
        android:src="@drawable/ic_baseline_person_24" />

    <ImageButton
        android:id="@+id/ibLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="331dp"
        android:layout_marginTop="611dp"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/tvUsernameProfile"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePicProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="142dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFollowersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="Followers"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="36dp"
        android:src="@android:drawable/ic_menu_manage" />


</RelativeLayout>