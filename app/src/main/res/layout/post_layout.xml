<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfilePicFeed"
        android:layout_width="113dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="240dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsernameFeed"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/ivProfilePicFeed"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivProfilePicFeed"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvCaptionFeed"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePicFeed"
        android:layout_marginStart="27dp"
        android:layout_marginTop="-102dp"
        android:layout_toEndOf="@+id/ivProfilePicFeed"
        android:text="TextView"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvNumLikesFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePicFeed"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-91dp"
        android:layout_toEndOf="@+id/ivProfilePicFeed"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/ibPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="225dp"
        android:layout_marginTop="300dp"
        android:layout_toEndOf="@+id/ivProfilePicFeed"
        app:srcCompat="@android:drawable/ic_media_play" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <VideoView
            android:id="@+id/vvVideo"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp" />

        <com.yqritc.scalablevideoview.ScalableVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_marginBottom="100dp"
            app:scalableType="fitCenter" />

    </FrameLayout>

