<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FollowsActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabsFollows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#7D44CD"
        app:tabIconTint="#E6ACE3"
        app:tabIndicatorColor="#F475ED"
        app:tabRippleColor="#570A53"
        app:tabTextColor="#EDB9F8">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerFollows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabsFollows"
        android:layout_marginTop="0dp"
        android:background="@android:color/white">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>